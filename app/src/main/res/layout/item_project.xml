<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="6dp"
    app:cardCornerRadius="5dp"
    app:cardElevation="6dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:id="@+id/card_view_project_image_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:padding="6dp"
            app:cardCornerRadius="5dp"
            app:cardElevation="0dp">

            <ImageView
                android:id="@+id/image_view_project_image"
                android:layout_width="75dp"
                android:layout_height="150dp"
                android:scaleType="centerInside"
                tools:src="@drawable/memories_app" />

        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/text_view_project_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/card_view_project_image_container"
            android:layout_toEndOf="@id/card_view_project_image_container"
            android:fontFamily="sans-serif-black"
            android:textColor="#1B4242"
            android:textSize="18sp"
            tools:text="App Name" />

        <TextView
            android:id="@+id/text_view_project_tools"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text_view_project_name"
            android:layout_marginTop="4dp"
            android:layout_toEndOf="@id/card_view_project_image_container"
            android:fontFamily="sans-serif-light"
            android:textColor="#333333"
            android:textSize="14sp"
            tools:text="App Tools" />

        <TextView
            android:id="@+id/text_view_project_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text_view_project_tools"
            android:layout_marginTop="4dp"
            android:layout_toEndOf="@id/card_view_project_image_container"
            android:fontFamily="sans-serif-light"
            android:textColor="#333333"
            android:textSize="14sp"
            tools:text="App Description" />

        <TextView
            android:id="@+id/text_view_project_link"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text_view_project_description"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="6dp"
            android:layout_toEndOf="@id/card_view_project_image_container"
            android:fontFamily="sans-serif-light"
            android:textColor="#333333"
            android:textSize="14sp"
            tools:text="Link" />



    </RelativeLayout>

</androidx.cardview.widget.CardView>